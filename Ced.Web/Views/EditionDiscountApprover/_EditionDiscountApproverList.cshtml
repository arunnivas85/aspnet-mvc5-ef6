@using Ced.Utility.Azure
@model Ced.Web.Models.EditionDiscountApprover.EditionDiscountApproverListModel

<div class="table-responsive">
    @if (Model.EditionDiscountApprovers != null && Model.EditionDiscountApprovers.Any())
    {
        <table class="table">
            <thead>
            <tr>
                <th>Approving User</th>
                <th>Lower Discount</th>
                <th>Upper Discount</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var editionDiscountApprover in Model.EditionDiscountApprovers)
            {
                <tr>
                    <td>@editionDiscountApprover.ApprovingUser</td>
                    <td>@editionDiscountApprover.ApprovalLowerPercentage%</td>
                    <td>@editionDiscountApprover.ApprovalUpperPercentage%</td>
                    <td class="col-lg-1">
                        <a href="#" class="del-edition-discount-approver" data-id="@editionDiscountApprover.EditionDiscountApproverId" data-editionid="@editionDiscountApprover.EditionId" title="Delete Discount Approver"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <table class="table borderless">
            <tr>
                <td class="text-center">
                    <img src="@(AzureStorageHelper.ImageBlobDirectory + "no-content-spider-web.png")" style="opacity: .7" />
                </td>
            </tr>
            <tr>
                <td class="text-center">
                    No discount approvers yet
                </td>
            </tr>
        </table>
    }
</div>