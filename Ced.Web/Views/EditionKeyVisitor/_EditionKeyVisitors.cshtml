@model Ced.Web.Models.Edition.EditionKeyVisitorListModel

<div class="table-responsive">
    @if (Model.EditionKeyVisitors != null && Model.EditionKeyVisitors.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Key</th>
                    <th>Value</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var editionKeyVisitor in Model.EditionKeyVisitors)
                {
                    <tr>
                        <td>@editionKeyVisitor.KeyVisitor.Name</td>
                        <td>@editionKeyVisitor.Value</td>
                        <td class="col-lg-1">
                            <a href="#" class="del-editionkeyvisitor" data-id="@editionKeyVisitor.EditionKeyVisitorId" data-editionid="@editionKeyVisitor.EditionId" title="Delete KeyVisitor"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table class="table borderless">
            <tr>
                <td class="text-center">
                    No key visitor definitions yet
                </td>
            </tr>
        </table>
    }
</div>