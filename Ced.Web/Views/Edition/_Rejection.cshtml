@model Ced.Web.Models.Edition.EditionRejectionModel

@using (Html.BeginForm("_Reject", "Edition", FormMethod.Post, new { id = "rejectionForm" }))
{
    @Html.HiddenFor(model => model.EditionId)

    <div class="row generalinfo">

        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <div class="hpanel hgrey">
                        <div class="panel-heading">
                            Reason
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="form-group col-lg-12 tooltip-demo">
                                    @Html.TextAreaFor(model => model.Reason, new { @class = "form-control hblue maxlength", rows = 13, placeholder = "Reason for your rejection", maxlength = "5000" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-right m-t-xs">
                <button form="rejectionForm" class="btn btn-danger btnReject" id="btnReject" type="submit">
                    Reject
                </button>
            </div>
        </div>
    </div>
}