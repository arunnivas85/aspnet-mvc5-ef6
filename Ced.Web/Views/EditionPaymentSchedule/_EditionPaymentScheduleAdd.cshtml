@model Ced.Web.Models.EditionPaymentSchedule.EditionPaymentScheduleAddModel

<div class="form-group">
    <a href="javascript:void(0)" id="toggle-edition-payment-schedule-btn" class="btn btn-warning"><span class="fa fa-toggle-off 2x"></span> Add more</a>
</div>

<div id="add-edition-payment-schedule-div" class="row" style="display: none">
    <div class="form-group col-lg-12">
        <input class="form-control hyellow" id="payment-schedule-name" placeholder="Name" />
    </div>
    <div class="form-group col-lg-6">
        <label>Activation Date</label>
        <div class="input-group">
            @*<input class="datepicker form-control hblue" id="payment-schedule-activation-date" name="payment-schedule-activation-date" placeholder="Start Date"/>*@
            @Html.EditorFor(model => model.ActivationDate, new { htmlAttributes = new { id = "payment-schedule-activation-date", @class = "datepicker form-control hyellow" } })
            <span class="input-group-addon">
                <span class="fa fa-calendar-o"></span>
            </span>
        </div>
    </div>
    <div class="form-group col-lg-6">
        <label>Expiry Date</label>
        <div class="input-group">
            @*<input class="datepicker form-control hblue" id="payment-schedule-expiry-date" name="payment-schedule-expiry-date" placeholder="Expiry Date"/>*@
            @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { id = "payment-schedule-expiry-date", @class = "datepicker form-control hyellow" } })
            <span class="input-group-addon">
                <span class="fa fa-calendar-o"></span>
            </span>
        </div>
    </div>
    <div class="col-lg-12">
        <hr style="border-top: 1px solid #FFBF25" />
    </div>
    <div class="col-lg-12">
        <label>Installments</label>
    </div>
    <div class="form-group col-lg-6">
        <input class="touchspin ts-common hyellow" id="payment-schedule-installment1-percentage" placeholder="Percentage 1" />
    </div>
    <div class="form-group col-lg-6">
        <div class="input-group">
            <input class="datepicker form-control hyellow" id="payment-schedule-installment1-due-date" placeholder="Installment Date 1" />
            <span class="input-group-addon">
                <span class="fa fa-calendar-o"></span>
            </span>
        </div>
    </div>
    <div class="form-group col-lg-6">
        <input class="touchspin ts-common hyellow" id="payment-schedule-installment2-percentage" placeholder="Percentage 2" />
    </div>
    <div class="form-group col-lg-6">
        <div class="input-group">
            <input class="datepicker form-control hyellow" id="payment-schedule-installment2-due-date" placeholder="Installment Date 2" />
            <span class="input-group-addon">
                <span class="fa fa-calendar-o"></span>
            </span>
        </div>
    </div>
    <div class="form-group col-lg-6">
        <input class="touchspin ts-common hyellow" id="payment-schedule-installment3-percentage" placeholder="Percentage 3" />
    </div>
    <div class="form-group col-lg-6">
        <div class="input-group">
            <input class="datepicker form-control hyellow" id="payment-schedule-installment3-due-date" placeholder="Installment Date 3" />
            <span class="input-group-addon">
                <span class="fa fa-calendar-o"></span>
            </span>
        </div>
    </div>
    <div class="form-group col-lg-6">
        <input class="touchspin ts-common hyellow" id="payment-schedule-installment4-percentage" placeholder="Percentage 4" />
    </div>
    <div class="form-group col-lg-6">
        <div class="input-group">
            <input class="datepicker form-control hyellow" id="payment-schedule-installment4-due-date" placeholder="Installment Date 4" />
            <span class="input-group-addon">
                <span class="fa fa-calendar-o"></span>
            </span>
        </div>
    </div>
    <div class="form-group col-lg-6">
        <input class="touchspin ts-common hyellow" id="payment-schedule-installment5-percentage" placeholder="Percentage 5" />
    </div>
    <div class="form-group col-lg-6">
        <div class="input-group">
            <input class="datepicker form-control hyellow" id="payment-schedule-installment5-due-date" placeholder="Installment Date 5" />
            <span class="input-group-addon">
                <span class="fa fa-calendar-o"></span>
            </span>
        </div>
    </div>
    <div class="col-lg-12 text-right">
        <a href="#" id="add-edition-payment-schedule-btn" class="btn btn-primary">Add</a>
    </div>
</div>