@model Ced.Web.Models.EventDirector.EventDirectorEditModel

<div class="modal-dialog" style="max-width: 600px">
    <div class="modal-content">
        <div class="color-line"></div>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Add Event Director</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("_Add", "EventDirector", FormMethod.Post, new {id = "addEventDirectorForm"}))
            {
                <div class="col-lg-12">
                    <div class="row">
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="control-label">Event:</label>
                                <div class="input-group col-lg-12">
                                    <input id="eventSearchBox2" name="EventId" class="form-control" type="text"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">User:</label>
                                <div class="input-group col-lg-12">
                                    <input id="emailSearchBox2" name="UserEmail" class="form-control" type="text"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Application:</label>
                                <div class="input-group col-lg-12">
                                    @foreach (var app in Model.Applications)
                                    {
                                        <div class="checkbox checkbox-success checkbox-inline">
                                            <input id="@(app.Code)2" name="ApplicationId" type="checkbox" value="@app.ApplicationId">
                                            <label for="@(app.Code)2">
                                                @app.Code
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Primary:</label>
                                <div class="input-group col-lg-12">
                                    <div class="checkbox checkbox-success">
                                        <input id="isPrimary2" name="IsPrimary" type="checkbox" value="true">
                                        <label for="isPrimary2">
                                            Primary
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Assistant:</label>
                                <div class="input-group col-lg-12">
                                    <div class="checkbox checkbox-success">
                                        <input id="isAssistant2" name="IsAssistant" type="checkbox" value="true">
                                        <label for="isAssistant2">
                                            Assistant
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-justify m-b-md">
                    <button class="btn btn-success btn-block" id="btnAdd"><i class="fa fa-spinner fa-spin" id="loading" style="display: none"></i> Add</button>
                </div>
            }
        </div>
    </div>
</div>